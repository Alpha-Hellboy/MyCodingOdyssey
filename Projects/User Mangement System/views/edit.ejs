<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Username</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </head>
  <body>
    <div class="container-fluid mb-3 mt-3">
      <% if (typeof message !== 'undefined') { %>
      <div class="alert alert-danger alert-dismissible fade show mt-3 mb-3 ms-3 me-3" role="alert">
        <strong>Error!</strong> <%= message %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      <% } %>
      <div class="d-flex mb-3 mt-3 justify-content-between">
        <h2>Edit Username</h2>
        <form action="/user" method="get">
          <button type="submit" class="btn btn-outline-secondary">Home</button>
        </form>
      </div>
      <div>
        <form action="/user/<%= result[0].id %>?_method=PATCH" method="post" class="needs-validation" novalidate>
          <div class="input-group mb-3">
            <span class="input-group-text">ID</span>
            <input type="text" class="form-control" id="userId" placeholder="Enter ID" value="<%=result[0].id %>" readonly name="id" />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">Email</span>
            <input type="text" id="userEmail" class="form-control" placeholder="Enter Email" value=" <%=result[0].email %>" readonly />
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">Username</span>
            <input type="text" id="username" name="username" placeholder="Enter Username" class="form-control" value=" <%=result[0].username %>" required />
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Please choose a username.</div>
          </div>
          <div class="input-group mb-3">
            <span class="input-group-text">Password</span>
            <input type="password" name="formPassword" id="password" placeholder="Enter password" class="form-control" required />
            <div class="valid-feedback">Looks Good</div>
            <div class="invalid-feedback">Please enter a password.</div>
          </div>
          <div class="input-group mb-3">
            <button type="submit" class="btn btn-outline-primary" onclick="validateForm(event)">Change Info</button>
            <button type="reset" class="btn btn-outline-danger">Cancel</button>
          </div>
        </form>
      </div>
    </div>
    <script>
      function validateForm(event) {
        const form = event.target.form;

        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }

        form.classList.add("was-validated");
      }
    </script>
  </body>
</html>
